<mujoco model="single_swerve_test">
  <compiler angle="radian"/>

  <option gravity="0 0 -9.81" timestep="0.002"/>

  <worldbody>
    <geom name="floor" type="plane" size="10 10 0.1" rgba="0.3 0.3 0.3 1"/>

    <!-- Simple box chassis with single swerve module -->
    <body name="chassis" pos="0 0 0.15">
      <freejoint name="chassis_joint"/>
      <geom name="chassis_box" type="box" size="0.2 0.2 0.05" mass="10" rgba="0.5 0.5 0.5 1"/>

      <!-- Swerve module: steer joint -> wheel body -> drive joint -> wheel -->
      <body name="steer_body" pos="0 0 -0.05">
        <joint name="steer" type="hinge" axis="0 0 1" damping="0.1"/>
        <geom name="steer_housing" type="cylinder" size="0.03 0.02" mass="0.5"
              rgba="0.4 0.4 0.4 1" contype="0" conaffinity="0"/>

        <body name="wheel_body" pos="0 0 0">
          <joint name="drive" type="hinge" axis="0 1 0"/>
          <geom name="wheel" type="cylinder" size="0.1 0.03"
                euler="1.5708 0 0" mass="1" rgba="0.2 0.2 0.2 1" friction="1.5 0.005 0.0001"/>
        </body>
      </body>

      <!-- Support casters to keep robot level (no physics) -->
      <geom name="caster_bl" type="sphere" size="0.05" pos="-0.15 0.15 -0.1"
            mass="0.1" friction="0.01 0.001 0.0001" rgba="0 0 0 0.3"/>
      <geom name="caster_br" type="sphere" size="0.05" pos="-0.15 -0.15 -0.1"
            mass="0.1" friction="0.01 0.001 0.0001" rgba="0 0 0 0.3"/>
    </body>
  </worldbody>

  <actuator>
    <motor name="steer_motor" joint="steer" gear="1" ctrllimited="true" ctrlrange="-50 50"/>
    <motor name="drive_motor" joint="drive" gear="1" ctrllimited="true" ctrlrange="-50 50"/>
  </actuator>
</mujoco>
