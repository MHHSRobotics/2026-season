<mujoco model="tank_drive_test">
  <compiler angle="radian"/>

  <option gravity="0 0 -9.81" timestep="0.002"/>

  <worldbody>
    <geom name="floor" type="plane" size="10 10 0.1" rgba="0.3 0.3 0.3 1"/>

    <!-- Simple box chassis -->
    <body name="chassis" pos="0 0 0.1">
      <freejoint name="chassis_joint"/>
      <geom name="chassis_box" type="box" size="0.3 0.2 0.05" mass="10" rgba="0.5 0.5 0.5 1"/>

      <!-- Left wheel -->
      <body name="left_wheel" pos="0 0.25 0">
        <joint name="left_drive" type="hinge" axis="0 1 0"/>
        <geom name="left_wheel_geom" type="cylinder" size="0.1 0.03"
              euler="1.5708 0 0" mass="1" rgba="0.2 0.2 0.2 1" friction="1.5 0.005 0.0001"/>
      </body>

      <!-- Right wheel -->
      <body name="right_wheel" pos="0 -0.25 0">
        <joint name="right_drive" type="hinge" axis="0 1 0"/>
        <geom name="right_wheel_geom" type="cylinder" size="0.1 0.03"
              euler="1.5708 0 0" mass="1" rgba="0.2 0.2 0.2 1" friction="1.5 0.005 0.0001"/>
      </body>
    </body>
  </worldbody>

  <actuator>
    <motor name="left_motor" joint="left_drive" gear="1" ctrllimited="true" ctrlrange="-50 50"/>
    <motor name="right_motor" joint="right_drive" gear="1" ctrllimited="true" ctrlrange="-50 50"/>
  </actuator>
</mujoco>
